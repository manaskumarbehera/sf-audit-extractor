{
  "name": "sf-audit-extractor",
  "version": "1.0.0",
  "description": "TrackForcePro Chrome Extension",
  "main": "background.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "start": "echo 'This is a Chrome extension project â€” load via chrome://extensions'",
    "build": "esbuild popup.js --bundle --minify --sourcemap --outfile=dist/popup.bundle.js --platform=browser",
    "package": "zip -r TrackForcePro-v$(node -p \"require('./manifest.json').version\").zip manifest.json background.js content.js popup.html popup.js popup.css audit_helper.js constants.js data_explorer_helper.js graphql_helper.js lms_helper.js oauth_helper.js platform_helper.js settings_helper.js soql_helper.js url_helper.js utils.js icons/ rules/ scripts/"
  },
  "keywords": [
    "salesforce",
    "chrome-extension",
    "jest",
    "testing"
  ],
  "author": "Manas Kumar Behera",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.18.10",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s"
    ],
    "verbose": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
