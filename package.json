{
  "name": "sf-audit-extractor",
  "version": "1.0.0",
  "description": "TrackForcePro Chrome Extension",
  "main": "background.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "start": "echo 'This is a Chrome extension project â€” load via chrome://extensions'",
    "build": "esbuild popup.js --bundle --minify --sourcemap --outfile=dist/popup.bundle.js --platform=browser",
    "package": "./build.sh",
    "zip": "./build.sh"
  },
  "keywords": [
    "salesforce",
    "chrome-extension",
    "jest",
    "testing"
  ],
  "author": "Manas Kumar Behera",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.18.10",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s"
    ],
    "verbose": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
